
<div class="container">
  <div class="page-header">
    <h1>New Location</h1>
  </div>

  <%= form_for [@company, @location], html: {class: "form-horizontal"} do |f| %>


  <div class="form-group">
    <%= f.label :street_name, class: "col-md-2" %>
    <%= f.text_field :street_name, class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.label :city, class: "col-md-2" %>
    <%= f.text_field :city, class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.label :state, class: "col-md-2" %>
    <%= f.text_field :state, class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.label :zip_code, class: "col-md-2" %>
    <%= f.text_field :zip_code, class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.label :country, class: "col-md-2" %>
    <%= f.text_field :country, class: "col-md-4" %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary col-md-offset-2'%>
  </div>

  <% end %>
</div>
